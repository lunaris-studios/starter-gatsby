{
	"include": ["./src/**/*"],
	"compilerOptions": {
		"target": "esnext",
		"module": "commonjs",
		"lib": ["dom", "es2018"],
		"jsx": "react",
		"strict": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"noEmit": true,
		"skipLibCheck": true,
		"noImplicitAny": false,
		"resolveJsonModule": true,
		"baseUrl": ".",
		"paths": {
			"~/*": ["./src/*"]
		},
		"typeRoots": ["./src/ts/declarations", "./node_modules/@types"]
	}
}
